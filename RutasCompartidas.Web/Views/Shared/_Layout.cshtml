<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RutasCompartidas.Web</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/cosmo/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RutasCompartidas.Web.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                
                <a class="navbar-brand d-flex align-items-center" asp-controller="Ruta" asp-action="Index">
                    <i class="bi bi-geo-alt-fill me-2 fs-4"></i>
                    <span class="fw-bold">Rutas Compartidas</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <div class="ms-auto d-flex align-items-center text-white">
                        @if (Context.Session.GetString("UserName") != null)
                        {
                            <span class="me-3">
                                <i class="bi bi-person-circle"></i> Usuario: <strong>@Context.Session.GetString("UserName")</strong>
                            </span>

                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                <button class="btn btn-outline-light btn-sm">
                                    <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">

        <main role="main" class="flex-grow-1 pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="bg-dark text-white mt-auto py-3">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - Rutas Compartidas 🚙

            <div class="mt-2">
                <a href="https://github.com/wilmar0312" target="_blank" class="text-white text-decoration-none">
                    <i class="bi bi-github"></i> Ver en GitHub
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
