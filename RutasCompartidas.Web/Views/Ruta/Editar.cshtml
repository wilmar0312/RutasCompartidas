@model RutasCompartidas.Domain.Entities.Ruta

<h2>Editar Ruta</h2>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <label>Origen:</label>
    <input type="text" name="Origen" value="@Model.Origen" required />

    <label>Destino:</label>
    <input type="text" name="Destino" value="@Model.Destino" required />

    <label>Descripción:</label>
    <textarea name="Descripcion">@Model.Descripcion</textarea>

    <label>Fecha y Hora:</label>
    <input type="datetime-local" name="FechaHora" value="@Model.FechaHora.ToString("yyyy-MM-ddTHH:mm")" required />

    <button type="submit">Actualizar</button>
</form>
